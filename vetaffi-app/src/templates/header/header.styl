primaryDarkBlue = #205493
primaryWhite = #ffffff
bgWarmLight = e4e2e0

headerLetterSpace = 1.5px
headerFontSize = 40px

body
  overflow-x: hidden;
  margin: 0px;
  background-color: bgWarmLight;
  font-family: 'Merriweather', serif;

body a
  color: primaryWhite;
  text-decoration: none;

body a:hover
  text-decoration: underline;

header-banner
  height: 60px;
  width: 100%;
  background-color: primaryDarkBlue;

header-logo
  position: relative;
  top: 50%;
  transform: translateY(-50%);
  margin-left: 30px;
  float: left;
  font-size: 40px
  letter-spacing: headerLetterSpace;
  cursor: pointer;